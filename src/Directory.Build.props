<Project>

  <!-- version -->
  <PropertyGroup>
    <AssemblyVersion>2.4.1.0</AssemblyVersion>
    <FileVersion>2.4.1</FileVersion>
    <VersionPrefix>2.4.1</VersionPrefix>
    <VersionSuffix>$(VERSION_SUFFIX)</VersionSuffix>
  </PropertyGroup>

  <!-- assembly signing -->
  <PropertyGroup>
    <AssemblyOriginatorKeyFile>$(MSBuildThisFileDirectory)Xbehave.snk</AssemblyOriginatorKeyFile>
    <PublicSign Condition=" '$(OS)' != 'Windows_NT' ">true</PublicSign>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>

</Project>
