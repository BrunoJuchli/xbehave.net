<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>A fluent and concise BDD/TDD library based on xUnit.net designed for use either from day one or as a seamless addition to an existing xUnit.net based workflow.</Description>
    <TargetFramework>netstandard1.1</TargetFramework>
    <RootNamespace>Xbehave</RootNamespace>
    <CodeAnalysisRuleSet>..\Xbehave.ruleset</CodeAnalysisRuleSet>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\..\stylecop.json" Link="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LiteGuard.Source" Version="2.0.1" PrivateAssets="All" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" PrivateAssets="All" />
    <PackageReference Include="xunit.extensibility.core" Version="2.4.0-beta.2.build4010 " />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SourceLink.Create.GitHub" Version="2.8.0" PrivateAssets="All" />
    <DotNetCliToolReference Include="dotnet-sourcelink-git" Version="2.8.0" />
  </ItemGroup>

</Project>
